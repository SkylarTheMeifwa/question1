<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>A Question for Zack</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin-top: 50px;
        }
    </style>
    <script>
        function askQuestion() {
            let answer = confirm("Do you love me?");
            if (answer) {
                displayMessages();
            } else {
                confirmNo();
            }
        }

        function displayMessages() {
            alert("Yay! I love you too!");
            setTimeout(() => alert("I will love you forever!"), 200);
            setTimeout(() => alert("You are super cute!"), 400);
            setTimeout(() => alert("You are super sweet!"), 600);
            setTimeout(() => alert("I love you more than anything in the world!"), 800);
            setTimeout(() => alert("I wanna cuddle you and never let go of you!"), 1000);
            setTimeout(() => alert("You are my favorite Zack!"), 1200);
            setTimeout(() => alert("I am going to kidnap you and take you on a date with me!"), 1400);
            setTimeout(() => alert("I love you so very much!"), 1600);
            setTimeout(() => alert("Absolute cutie!"), 1800);
            setTimeout(() => alert("I can not wait to see you again!"), 2000);
        }

        function confirmNo() {
            let sureAnswer = confirm("Are you sure?");
            if (sureAnswer) {
                if (confirm("Are you sure you're sure?")) {
                    alert("Oh...okay...");
                    if (confirm("Can I change your mind?")) {
                        if (confirm("Really!? :D")) {
                            askQuestion();
                        } else {
                            displaySad();
                        }
                    } else {
                        displaySad();
                    }
                } else {
                    if (confirm("Really!? :D")) {
                        askQuestion();
                    } else {
                        displaySad();
                    }
                }
            } else {
                if (confirm("Really!? :D")) {
                    askQuestion();
                } else {
                    displaySad();
                }
            }
        }

        function displaySad() {
            alert("...");
            setTimeout(() => alert("oh..."), 200);
            setTimeout(() => alert("well then..."), 400);
            setTimeout(() => alert("This is awkward..."), 600);
            setTimeout(() => alert("I really thought you loved me. :("), 800);
            setTimeout(() => alert("Well, I guess not..."), 1000);
            setTimeout(() => alert("I guess I'll just go then...?"), 1200);
            setTimeout(() => alert("Before I do, one more question..."), 1400);

            let finalAnswer = confirm("Are you sure?");
            if (finalAnswer) {
                alert("...");
                setTimeout(() => alert("oh..."), 200);
                setTimeout(() => alert(":("), 400);
            } else {
                askQuestion();
            }
        }
    </script>
</head>
<body>
    <h1>A Question for Zack</h1>
    <button onclick="askQuestion()">Start</button>
</body>
</html>
